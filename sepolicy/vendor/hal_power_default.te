# Allow writing to files in /proc/touchpanel
allow hal_power_default proc_touchpanel:dir search;
allow hal_power_default proc_touchpanel:file rw_file_perms;

allow hal_power_default input_device:chr_file { open read write };

# Debugsfs
allow hal_power_default { debugfs_easel debugfs_rpm }:dir search;
allow hal_power_default { debugfs_easel debugfs_rpm }:file r_file_perms;

# To do powerhint on nodes defined in powerhint.json
allow hal_power_default device_latency:chr_file rw_file_perms;
allow hal_power_default {
    sysfs_devices_system_cpu
    sysfs_mpdecision
    sysfs_devfreq
    sysfs_kgsl
    sysfs_cpu_boost
    sysfs_msm_perf
    sysfs_memory
    sysfs_graphics
    sysfs_msm_power
    sysfs_battery_supply
    sysfs_process_reclaim
}:dir r_dir_perms;

allow hal_power_default {
    sysfs_devices_system_cpu
    sysfs_mpdecision
    sysfs_kgsl
    sysfs_cpu_boost
    sysfs_msm_perf
    sysfs_memory
    sysfs_graphics
    sysfs_devfreq
    sysfs_msm_power
    sysfs_battery_supply
    sysfs_process_reclaim
}:file rw_file_perms;

allow hal_power_default {
    sysfs_devfreq
    sysfs_kgsl
}:lnk_file r_file_perms;

# To get/set powerhal state property
set_prop(hal_power_default, power_prop)

# To dump
allow hal_power_default cgroup:file read;
